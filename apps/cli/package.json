{
  "name": "curlme-cli",
  "version": "1.0.0",
  "description": "CLI tool for curlme",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "curlme": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "check-types": "tsc --noEmit",
    "install-global": "npm run build && npm install -g .",
    "uninstall-global": "npm uninstall -g curlme-cli"
  },
  "keywords": [
    "developers",
    "cli",
    "terminal",
    "curl"
  ],
  "author": "curlme",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
